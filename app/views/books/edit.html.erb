<% if flash[:notie] %>
<p id="notice">
  <%= flash[:notice] %>
</p>
<% end %>

<h1 class="edit">Editing Book</h1>

<div id="error_explanation">
<% if @book.errors.any? %>
  <h2 class="error"><%= @book.errors.count %>errors prohibited this book from being saved:
  </h2>
  <ul>
  <li>
  <% @book.errors.full_messages_for(:title) %>
  Title can't be blank
  </li>
  <li>
  <% @book.errors.full_messages_for(:body) %>
  Body can't be blank
  </li>
  </ul>
<% end %>
</div>

<%= form_with model:@book, local: true do |f| %>

<div class="field">
  <label for="book_title">
    Title
  </label>
    <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book_body">
    Body
  </label>
    <%= f.text_area :body %>
</div>

<div class="action">
    <%= f.submit 'Update Book' %>
</div>


<% end %>

<%= link_to "Show", book_path(@book) %>
