<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>


<tbody>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>

    <td>
      <%= link_to "Show", book_path(book) %>
    </td>
    <td>
      <%= link_to "Edit", edit_book_path(book) %>
    </td>
    <td>
      <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure" } %>
    </td>
  </tr>
  <% end %>

</tbody>
</table>

<h2>New book</h2>


<% if @book.errors.any? %>
<div id="error_explanation">
  <h2 class="error"><%= @book.errors.count %>errors prohibited this book from being saved:
    </h2>
      <ul>
        <li>
        <% @book.errors.full_messages_for(:title) %>
        Title can't be blank
        </li>
      <li>
      <% @book.errors.full_messages_for(:body) %>
      Body can't be blank
    </li>
  </ul>
</div>
<% end %>


<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book_body">Body</label>
  <%=  f.text_area :body %>
  </div>

<%= f.submit 'Create Book' %>

<% end %>